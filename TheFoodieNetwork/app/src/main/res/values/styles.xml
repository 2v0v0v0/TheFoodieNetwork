<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorPinkAccent</item>
        <item name="colorAccent">@color/colorLilac</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorLightPink</item>
        <item name="colorControlActivated">@color/colorPinkAccent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="DialogWindowTitle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:background">@color/colorPinkAccent</item>
        <item name="android:gravity">center</item>
    </style>

</resources>